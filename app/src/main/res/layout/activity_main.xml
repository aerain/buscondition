<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l1"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_toLeftOf="@id/l1"
            android:id="@+id/view2"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:id="@+id/rl"
            android:layout_weight="4"
            android:layout_toRightOf="@id/view2">
            <EditText
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:id="@+id/start"
                android:hint="출발지검색"
                android:inputType="text"
                android:paddingLeft="8dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginLeft="8dp"
                android:id="@+id/end"
                android:inputType="text"
                android:layout_below="@id/start"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:hint="도착지검색"/>
        </RelativeLayout>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/bus_swap"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:id="@+id/swap"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:text="버스찾기"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/border_round"
            android:id="@+id/findbus"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="0.5" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/l1"
        android:id="@+id/view1" />
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="즐겨찾기 버스"
    app:layout_constraintTop_toBottomOf="@id/view1"
    android:id="@+id/text1"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:id="@+id/favorite_bus"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/favorite_bus"
        android:id="@+id/view3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="즐겨찾기 정류장"
        app:layout_constraintTop_toBottomOf="@id/view3"
        android:id="@+id/text2"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:id="@+id/favorite_bus_stop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/favorite_bus_stop"
        android:id="@+id/view4" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최근 검색 기록"
        app:layout_constraintTop_toBottomOf="@id/view4"
        android:id="@+id/text3"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:id="@+id/lately_data"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/lately_data"
        android:id="@+id/view5" />

</android.support.constraint.ConstraintLayout>